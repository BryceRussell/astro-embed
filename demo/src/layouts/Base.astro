---
export interface Props {
	title?: string;
}
const { title = 'Astro Embed Testbed' } = Astro.props as Props;
---

<html lang="en">
	<head>
		<meta charset="utf-8" />
		<meta name="viewport" content="width=device-width" />
		<title>{title}</title>
	</head>

	<body>
		<div style="max-width: 40em; margin: 0 auto;">
			<h1>{title}</h1>
			<slot />
		</div>
	</body>
</html>
